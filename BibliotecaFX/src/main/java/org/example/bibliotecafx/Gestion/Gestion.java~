package org.example.bibliotecafx.Gestion;

import javafx.event.ActionEvent;
import javafx.fxml.FXML;
import javafx.fxml.FXMLLoader;
import javafx.scene.Parent;
import javafx.scene.Scene;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;
import org.example.bibliotecafx.DAO.AutorDAOImpl;

import java.io.IOException;

public class Gestion {

    // Interfaces
    @FXML
    private VBox InicioInterfaz;
    @FXML
    private VBox SocioInterfaz;
    @FXML
    private VBox AutorInterfaz;
    @FXML
    private VBox LibroInterfaz;
    @FXML
    private VBox PrestamoInterfaz;

    @FXML
    private TextField nombreAutorField;
    @FXML
    private TextField nacionalidadAutorField;
    @FXML
    private Label resultadoBusquedaLabel;

    private final AutorDAOImpl autorDAO = new AutorDAOImpl();

    // Métodos para cambiar de interfaz

    @FXML
    private void BotonAutor() throws IOException {
        new CargarInterfaz(InicioInterfaz, "/org/example/bibliotecafx/AutorInterfaz.fxml");
    }

    @FXML
    private void BotonLibro() throws IOException {
        new CargarInterfaz(InicioInterfaz, "/org/example/bibliotecafx/LibroInterfaz.fxml");
    }

    @FXML
    private void BotonPrestamo() throws IOException {
        new CargarInterfaz(InicioInterfaz, "/org/example/bibliotecafx/PrestamoInterfaz.fxml");
    }

    @FXML
    private void BotonSocio() throws IOException {
        new CargarInterfaz(InicioInterfaz, "/org/example/bibliotecafx/SocioInterfaz.fxml");
    }

    @FXML
    private void BotonSalir() {
        System.exit(0);
    }

    // Métodos de Autor

    @FXML
    private void VolverInicioAutor() throws IOException {
        Stage stage = (Stage) AutorInterfaz.getScene().getWindow();
        FXMLLoader loader = new FXMLLoader(getClass().getResource("/org/example/bibliotecafx/InicioInterfaz.fxml"));
        Scene scene = new Scene(loader.load(), 900, 700); // Ajusta el tamaño si es necesario
        stage.setScene(scene);
        stage.show();
    }

    public void listarAutores(ActionEvent actionEvent) {
    }

    public void buscarAutor(ActionEvent actionEvent) {
    }

    public void eliminarAutor(ActionEvent actionEvent) {
    }

    public void modificarAutor(ActionEvent actionEvent) {
    }

    public void anadirAutor(ActionEvent actionEvent) {
    }

    // Métodos de Libro

    @FXML
    private void VolverInicioLibro() throws IOException {
        Stage stage = (Stage) LibroInterfaz.getScene().getWindow();
        FXMLLoader loader = new FXMLLoader(getClass().getResource("/org/example/bibliotecafx/InicioInterfaz.fxml"));
        Scene scene = new Scene(loader.load(), 900, 700); // Ajusta el tamaño si es necesario
        stage.setScene(scene);
        stage.show();
    }

    public void anadirLibro(ActionEvent actionEvent) {
    }

    public void modificarLibro(ActionEvent actionEvent) {
    }

    public void eliminarLibro(ActionEvent actionEvent) {
    }

    public void buscarLibro(ActionEvent actionEvent) {
    }

    public void listarLibrosDisponibles(ActionEvent actionEvent) {
    }

    // Métodos de Socio

    @FXML
    private void VolverInicioSocio() throws IOException {
        Stage stage = (Stage) SocioInterfaz.getScene().getWindow();
        FXMLLoader loader = new FXMLLoader(getClass().getResource("/org/example/bibliotecafx/InicioInterfaz.fxml"));
        Scene scene = new Scene(loader.load(), 900, 700); // Ajusta el tamaño si es necesario
        stage.setScene(scene);
        stage.show();
    }

    public void anadirSocio(ActionEvent actionEvent) {
    }

    public void modificarSocio(ActionEvent actionEvent) {
    }

    public void eliminarSocio(ActionEvent actionEvent) {
    }

    public void buscarSocio(ActionEvent actionEvent) {
    }

    public void listarSocios(ActionEvent actionEvent) {
    }

    // Métodos de Préstamo

    @FXML
    private void VolverInicioPrestamo() throws IOException {
        Stage stage = (Stage) PrestamoInterfaz.getScene().getWindow();
        FXMLLoader loader = new FXMLLoader(getClass().getResource("/org/example/bibliotecafx/InicioInterfaz.fxml"));
        Scene scene = new Scene(loader.load(), 900, 700); // Ajusta el tamaño si es necesario
        stage.setScene(scene);
        stage.show();
    }

    public void registrarPrestamo(ActionEvent actionEvent) {
    }

    public void listarLibrosPrestados(ActionEvent actionEvent) {
    }

    public void verHistorial(ActionEvent actionEvent) {
    }

    // Método común para volver al inicio desde cualquier interfaz
    @FXML
    private void volverInicio(ActionEvent actionEvent) throws IOException {
        Stage stage = (Stage) ((TextField) actionEvent.getSource()).getScene().getWindow();
        FXMLLoader loader = new FXMLLoader(getClass().getResource("/org/example/bibliotecafx/InicioInterfaz.fxml"));
        Scene scene = new Scene(loader.load(), 900, 700); // Ajusta el tamaño si es necesario
        stage.setScene(scene);
        stage.show();
    }
}

